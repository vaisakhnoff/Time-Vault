<script>
  // Show the search bar when clicking the search icon
  document.querySelector('.search').addEventListener('click', function() {
    document.getElementById('search_input_box').classList.add('active');
  });

  document.getElementById('searchForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const searchQuery = document.getElementById('search_input').value;
    const currentUrl = new URL(window.location.href);
    const params = new URLSearchParams(currentUrl.search);

    if (searchQuery) {
      params.set('search', searchQuery);
    } else {
      params.delete('search');
    }
    
    // Remove the active class so the search bar disappears
    document.getElementById('search_input_box').classList.remove('active');

    // Redirect to shopPage with the search query
    if (currentUrl.pathname === '/shopPage') {
      window.location.href = `/shopPage?${params.toString()}`;
    } else {
      window.location.href = `/shopPage?search=${searchQuery}`;
    }
  });

  // Close search box and clear input when clicking the close icon
  document.getElementById('close_search').addEventListener('click', function() {
    document.getElementById('search_input').value = '';
    document.getElementById('search_input_box').classList.remove('active');
  });
</script>

