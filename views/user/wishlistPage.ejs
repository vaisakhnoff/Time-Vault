<%- include("../../views/partials/user/header") %>


<style>
    /* Provide extra top padding so the content isn’t hidden by a fixed header */
    .wishlist-container {
      padding-top: 150px; /* Increase this value if more space is needed */
      padding-bottom: 80px;
    }
  </style>


<main class="wishlist-container">
    <div class="breadcrumb-wrap">
        <div class="container">
            <nav class="breadcrumb">
                <a href="/">Home</a> &gt;
                <a href="/shopPage">Shop</a> &gt;
                <span>My Wishlist</span>
            </nav>
        </div>
    </div>

    <section class="wishlist-section">
        <div class="container">
            <h1 class="wishlist-title">My Wishlist</h1>
            <% if (wishlist && wishlist.products && wishlist.products.length > 0) { %>
                <div class="wishlist-grid">
                    <% wishlist.products.forEach(function(item) { %>
                        <div class="wishlist-item">
                            <div class="item-image">
                                <img src="/uploads/product-images/<%= item.productId.productImage[0] %>" 
                                     alt="<%= item.productId.productName %>" />
                            </div>
                            <div class="item-details">
                                <h3 class="item-name">
                                    <a href="/productDetails?id=<%= item.productId._id %>">
                                        <%= item.productId.productName %>
                                    </a>
                                </h3>
                                <p class="item-price">₹<%= item.productId.salePrice %></p>
                            </div>
                            <div class="item-actions">
                                <button class="btn-add" onclick="addToCart('<%= item.productId._id %>')">
                                    Add to Cart
                                </button>
                                <button class="btn-remove" onclick="removeFromWishlist('<%= item.productId._id %>')">
                                    ✕
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-wishlist">
                    <p>Your wishlist is empty!</p>
                    <a href="/shopPage" class="btn-shop">Explore Products</a>
                </div>
            <% } %>
        </div>
    </section>
</main>

<%- include("../../views/partials/user/footer") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function addToCart(productId) {
        fetch('/add-to-cart', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
            Swal.fire({
                icon: data.success ? 'success' : 'error',
                title: data.success ? 'Success' : 'Error',
                text: data.message || (data.success ? 'Product added to cart!' : 'Something went wrong')
            });
        })
        .catch(() => Swal.fire('Error', 'Something went wrong', 'error'));
    }

    function removeFromWishlist(productId) {
        fetch('/remove-from-wishlist', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
            Swal.fire({
                icon: data.success ? 'success' : 'error',
                title: data.success ? 'Success' : 'Error',
                text: data.success ? 'Product removed from wishlist!' : data.message
            }).then(() => { if (data.success) location.reload(); });
        })
        .catch(() => Swal.fire('Error', 'Something went wrong', 'error'));
    }
</script>

<style>
    .wishlist-container {
        background-color: #f5f5f5;
        padding-bottom: 40px;
    }

    .breadcrumb-wrap {
        background-color: #fff;
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
    }

    .breadcrumb {
        font-size: 14px;
        color: #666;
    }

    .breadcrumb a {
        color: #007bff;
        text-decoration: none;
    }

    .wishlist-section {
        margin-top: 20px;
    }

    .wishlist-title {
        font-size: 24px;
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .wishlist-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .wishlist-item {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .item-image img {
        max-width: 100px;
        height: auto;
        border-radius: 5px;
    }

    .item-details {
        margin: 10px 0;
    }

    .item-name a {
        font-size: 16px;
        color: #333;
        text-decoration: none;
    }

    .item-name a:hover {
        color: #007bff;
    }

    .item-price {
        font-size: 14px;
        color: #e74c3c;
        font-weight: bold;
    }

    .item-actions {
        display: flex;
        gap: 10px;
    }

    .btn-add {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-remove {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
    }

    .empty-wishlist {
        text-align: center;
        padding: 50px 0;
    }

    .empty-wishlist p {
        font-size: 18px;
        color: #666;
        margin-bottom: 20px;
    }

    .btn-shop {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

    @media (max-width: 600px) {
        .wishlist-grid {
            grid-template-columns: 1fr;
        }
    }
</style>