<%- include("../../views/partials/user/header") %>

<div style="height: 150px;"></div>

<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-4">My Orders</h2>

      <% if (orders && orders.length > 0) { %>
        <% orders.forEach(function(order) { %>
          <div class="card mb-4 shadow-sm p-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                  <h6 class="mb-1">Order #<%= order._id %></h6>
                  <small class="text-muted">Ordered on <%= new Date(order.createdAt).toLocaleDateString() %></small>
                </div>
                <span class="badge bg-<%= order.orderStatus === 'Delivered' ? 'success' :
                                      order.orderStatus === 'Cancelled' ? 'danger' :
                                      'warning' %>">
                  <%= order.orderStatus %>
                </span>
              </div>

              <div class="row">
                <% order.items.forEach(function(item) { %>
                  <div class="col-lg-4 col-md-6 mb-3">
                    <div class="product-card p-2 border rounded text-center">
                      <% if (item.productId && item.productId.productImage && item.productId.productImage.length > 0) { %>
                        <img src="/uploads/product-images/<%= item.productId.productImage[0] %>"
                             alt="<%= item.productId.productName %>"
                             class="img-fluid mb-2 rounded" style="max-height: 100px; object-fit: contain;">
                      <% } else { %>
                        <img src="/uploads/product-images/default.jpg"
                             alt="No Image"
                             class="img-fluid mb-2 rounded" style="max-height: 100px; object-fit: contain;">
                      <% } %>
                      <h6 class="mb-1"><%= item.productId.productName %></h6>
                      <small>Qty: <%= item.quantity %></small> | 
                      <small>₹<%= item.price %></small>
                    </div>
                  </div>
                <% }); %>
              </div>

              <hr class="my-3">

              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <small>Total: ₹<%= order.totalAmount %></small><br>
                  <small>Payment: <%= order.paymentMethod %></small><br>
                  <small>Status: 
                    <span class="badge bg-<%= order.paymentStatus === 'Paid' ? 'success' : 'warning' %>">
                      <%= order.paymentStatus %>
                    </span>
                  </small>
                </div>
                <a href="/order/<%= order._id %>" class="btn btn-sm btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>

        <!-- Pagination -->
        <nav aria-label="Order Pagination">
          <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
              </li>
            <% } %>
            
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } else { %>
        <div class="alert alert-info text-center">
          <p class="mb-0">You haven't placed any orders yet.</p>
          <a href="/shopPage" class="btn btn-primary mt-3">Start Shopping</a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .shadow-sm {
    box-shadow: 0 0.3rem 0.6rem rgba(0, 0, 0, 0.1)!important;
  }

  .rounded {
    border-radius: 0.3rem!important;
  }
</style>


<%- include("../../views/partials/user/footer") %>
