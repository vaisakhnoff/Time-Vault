  <!-- Include Header -->
  <%- include("../../views/partials/user/header") %>
  
  <!-- Custom CSS for Wallet Page -->
  <style>
    /* Wallet Balance Section */
    .wallet-balance {
      background-color: #fff;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
      padding: 30px;
      border-radius: 8px;
      text-align: center;
      margin-bottom: 20px;
    }
    .wallet-balance h3 {
      color: #666;
      margin-bottom: 15px;
    }
    .wallet-balance h2 {
      color: #333;
      font-size: 2.5em;
      margin: 0;
    }
    
    /* Transaction History Table */
    .transaction-history h3 {
      margin-bottom: 20px;
      color: #333;
    }
    .transaction-table {
      width: 100%;
      border-collapse: collapse;
    }
    .transaction-table th, .transaction-table td {
      padding: 12px 15px;
      border: 1px solid #ddd;
      text-align: left;
    }
    .transaction-table th {
      background-color: #f2f2f2;
    }
    
    /* Pagination */
    .pagination {
      text-align: center;
      margin-top: 20px;
    }
    .pagination a, .pagination span {
      margin: 0 5px;
      padding: 8px 12px;
      border: 1px solid #ddd;
      text-decoration: none;
      color: #333;
    }
    .pagination .current-page {
      background-color: #333;
      color: #fff;
      border-color: #333;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .transaction-table {
        display: block;
        width: 100%;
      }
      .transaction-table thead {
        display: none;
      }
      .transaction-table tbody tr {
        display: block;
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
      }
      .transaction-table td {
        display: block;
        text-align: right;
        position: relative;
        padding-left: 50%;
      }
      .transaction-table td::before {
        content: attr(data-label);
        position: absolute;
        left: 10px;
        width: 45%;
        padding-right: 10px;
        font-weight: bold;
        text-align: left;
      }
    }
    .credit {
      background-color: rgba(40, 167, 69, 0.1);
    }
    .debit {
      background-color: rgba(220, 53, 69, 0.1);
    }
    .badge {
      padding: 8px 12px;
      border-radius: 4px;
    }

    .pagination {
  display: flex;
  justify-content: center; /* Ensures proper centering */
  align-items: center;
  margin-top: 20px;
  gap: 5px; /* Adds spacing between buttons */
}

.pagination a, 
.pagination span {
  display: inline-block;
  padding: 8px 12px;
  border: 1px solid #ddd;
  text-decoration: none;
  color: #333;
  border-radius: 4px; /* Rounded edges for better UI */
  min-width: 35px;
  text-align: center;
}

.pagination .current-page {
  background-color: #333;
  color: #fff;
  border-color: #333;
}

  </style>
  
  <!-- Wallet Area -->
  <section class="wallet_area">
    <div class="container">
      <!-- Wallet Balance -->
      <div class="row">
        <div class="col-md-6">
          <div class="wallet-balance">
            <h3>Main Balance</h3>
            <h2>₹<%= wallet.balance.toFixed(2) %></h2>
          </div>
        </div>
        <div class="col-md-6">
          <div class="wallet-balance">
            <h3>Referral Earnings</h3>
            <h2>₹<%= wallet.referralEarnings.toFixed(2) %></h2>
          </div>
        </div>
      </div>
  
      <!-- Transaction History -->
      <div class="transaction-history mt-4">
        <h3>Transaction History</h3>
        <div class="table-responsive">
          <table class="table transaction-table">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Amount</th>
                <th scope="col">Type</th>
              </tr>
            </thead>
            <tbody>
              <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(function(tx) { %>
                  <tr class="<%= tx.type.toLowerCase() %>">
                    <td data-label="Date"><%= new Date(tx.createdAt).toLocaleDateString() %></td>
                    <td data-label="Description"><%= tx.description %></td>
                    <td data-label="Amount">₹<%= tx.amount.toFixed(2) %></td>
                    <td data-label="Type">
                      <span class="badge <%= tx.type === 'Credit' ? 'bg-success' : 'bg-danger' %>">
                        <%= tx.type %>
                      </span>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">No transactions found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
  
        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
          <div class="pagination">
            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
              <% if (i === pagination.currentPage) { %>
                <span class="current-page"><%= i %></span>
              <% } else { %>
                <a href="/wallet?page=<%= i %>"><%= i %></a>
              <% } %>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </section>
  
  <!-- Include Footer -->
  <%- include("../../views/partials/user/footer") %>
