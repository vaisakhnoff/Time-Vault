<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
      <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
        <div class="col-first">
          <h1>Wallet</h1>
          <nav class="d-flex align-items-center">
            <a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
            <a href="/wallet">Wallet</a>
          </nav>
        </div>
      </div>
    </div>
  </section>
  <!-- End Banner Area -->
  
  <!-- Include Header -->
  <%- include("../../views/partials/user/header") %>
  
  <!-- Custom CSS for Wallet Page -->
  <style>
    /* Wallet Balance Section */
    .wallet-balance {
      background-color: #f7f7f7;
      padding: 20px;
      margin-bottom: 30px;
      text-align: center;
      border-radius: 4px;
    }
    .wallet-balance h2 {
      margin: 0;
      font-size: 2em;
      color: #333;
    }
    
    /* Transaction History Table */
    .transaction-history h3 {
      margin-bottom: 20px;
      color: #333;
    }
    .transaction-table {
      width: 100%;
      border-collapse: collapse;
    }
    .transaction-table th, .transaction-table td {
      padding: 12px 15px;
      border: 1px solid #ddd;
      text-align: left;
    }
    .transaction-table th {
      background-color: #f2f2f2;
    }
    
    /* Pagination */
    .pagination {
      text-align: center;
      margin-top: 20px;
    }
    .pagination a, .pagination span {
      margin: 0 5px;
      padding: 8px 12px;
      border: 1px solid #ddd;
      text-decoration: none;
      color: #333;
    }
    .pagination .current-page {
      background-color: #333;
      color: #fff;
      border-color: #333;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .transaction-table {
        display: block;
        width: 100%;
      }
      .transaction-table thead {
        display: none;
      }
      .transaction-table tbody tr {
        display: block;
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
      }
      .transaction-table td {
        display: block;
        text-align: right;
        position: relative;
        padding-left: 50%;
      }
      .transaction-table td::before {
        content: attr(data-label);
        position: absolute;
        left: 10px;
        width: 45%;
        padding-right: 10px;
        font-weight: bold;
        text-align: left;
      }
    }
  </style>
  
  <!-- Wallet Area -->
  <section class="wallet_area">
    <div class="container">
      <!-- Wallet Balance -->
      <div class="wallet-balance">
        <h2>Your Wallet Balance: $<%= wallet.balance.toFixed(2) %></h2>
      </div>
  
      <!-- Transaction History -->
      <div class="transaction-history">
        <h3>Transaction History</h3>
        <div class="table-responsive">
          <table class="table transaction-table">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Amount</th>
                <th scope="col">Type</th>
              </tr>
            </thead>
            <tbody>
              <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(function(tx) { %>
                  <tr>
                    <td data-label="Date"><%= new Date(tx.date).toLocaleDateString() %></td>
                    <td data-label="Description"><%= tx.description %></td>
                    <td data-label="Amount">$<%= tx.amount.toFixed(2) %></td>
                    <td data-label="Type"><%= tx.type %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="4" style="text-align: center;">No transactions found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
  
        <!-- Pagination -->
        <div class="pagination">
          <% for(let i = 1; i <= pagination.totalPages; i++) { %>
            <% if (i === pagination.currentPage) { %>
              <span class="current-page"><%= i %></span>
            <% } else { %>
              <a href="/wallet?page=<%= i %>"><%= i %></a>
            <% } %>
          <% } %>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Include Footer -->
  <%- include("../../views/partials/user/footer") %>
  