<%- include("../../views/partials/user/header") %>

<style>
  .address-container {
    margin-top: 150px; /* Extra top spacing to avoid header overlap */
    max-width: 600px;
    padding: 30px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    margin-left: auto;
    margin-right: auto;
  }

  .address-heading {
    text-align: center;
    margin-bottom: 30px;
    font-size: 24px;
    font-weight: bold;
  }

  .address-item {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 15px;
    margin-bottom: 20px;
    background-color: #f9f9f9;
  }

  .address-details {
    font-size: 16px;
    margin-bottom: 10px;
  }

  .address-actions {
    text-align: right;
  }

  .btn {
    padding: 8px 12px;
    font-size: 14px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
  }

  .btn-edit {
    background-color: #007bff;
    color: #fff;
    margin-right: 10px;
  }

  .btn-delete {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-add {
    display: block;
    width: 100%;
    margin-top: 20px;
    background-color: #28a745;
    color: #fff;
    text-align: center;
  }
</style>

<div class="container address-container">
  <h3 class="address-heading">My Addresses</h3>
  
  <% if (addresses && addresses.length > 0) { %>
    <% addresses.forEach(function(address) { %>
      <div class="address-item">
        <div class="address-details">
          <p><strong>Name:</strong> <%= address.name %></p>
          <p><strong>Type:</strong> <%= address.address.addressType %></p>
          <p><strong>City:</strong> <%= address.city %></p>
          <p><strong>Landmark:</strong> <%= address.landMark %></p>
          <p><strong>State:</strong> <%= address.state %></p>
          <p><strong>Pincode:</strong> <%= address.pincode %></p>
          <p><strong>Phone:</strong> <%= address.phone_no %></p>
          <p><strong>Alternative Phone:</strong> <%= address.altPhone_no %></p>
        </div>
        <div class="address-actions">
          <a href="/editAddress/<%= address._id %>" class="btn btn-edit">Edit</a>
          <a href="/deleteAddress/<%= address._id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this address?')">Delete</a>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p style="text-align:center;">No addresses found. Please add one.</p>
  <% } %>
  
  <a href="/addAddress" class="btn btn-add">Add New Address</a>
</div>

<%- include("../../views/partials/user/footer") %>
