<script>
    
    document.addEventListener('DOMContentLoaded', function () {
      let resendOtpBtn = document.getElementById('resendOtpBtn');
      let timerDisplay = document.getElementById('timerDisplay');
      let timeLeft = 59;
  
     
      resendOtpBtn.disabled = true;
      timerDisplay.textContent = `Resend OTP in ${timeLeft} seconds`;
  
      const countdown = setInterval(() => {
        timeLeft--;
        if (timeLeft <= 0) {
          clearInterval(countdown);
          timerDisplay.textContent = "";
          resendOtpBtn.disabled = false;
        } else {
          timerDisplay.textContent = `Resend OTP in ${timeLeft} seconds`;
        }
      }, 1000);
  
      
      resendOtpBtn.addEventListener('click', function () {
        $.ajax({
            type: "POST",
            url: "/resend-otp",
            dataType: "json",
            success: function(response) {
                if (response.success) {
                    alert("OTP has been resent.");
                    // Restart the timer
                    timeLeft = 59;
                    resendOtpBtn.disabled = true;
                    timerDisplay.textContent = `Resend OTP in ${timeLeft} seconds`;
                    const restartCountdown = setInterval(() => {
                        timeLeft--;
                        if (timeLeft <= 0) {
                            clearInterval(restartCountdown);
                            timerDisplay.textContent = "";
                            resendOtpBtn.disabled = false;
                        } else {
                            timerDisplay.textContent = `Resend OTP in ${timeLeft} seconds`;
                        }
                    }, 1000);
                } else {
                    alert(response.message || "Failed to resend OTP. Please try again.");
                }
            },
            error: function(xhr) {
                let res = xhr.responseJSON;
                if (res && res.message) {
                    alert(res.message);
                } else {
                    alert("An unexpected error occurred.");
                }
            }
        });
    });
});

function verifyOtp(){
      const otpinput = document.getElementById("otp").value;
      $.ajax({
        type:"POST",
        url:"/verify-otp",
        data: { otp: otpinput },
        dataType: "json", // 
        success:function(response){
          if(response.success){
            alert("OTP verified successfully. You can now login.");
            window.location.href = response.redirectUrl;
          } else {
            alert("Invalid OTP. Please try again.");
          }
        },
        error: function(xhr) {
          let res = xhr.responseJSON;
          if(res && res.message) {
            alert(res.message);
          } else {
            alert("An unexpected error occurred.");
          }
        }
      });
      return false; // Prevent form submission
    }
  </script>
  
  
