<%- include("../../views/partials/admin/header") %>

<!-- Add in the head section -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div class="container mt-5">
  <h1>Order Details</h1>
  
  <!-- Order Overview -->
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div>
        <h5>Order ID: <%= order._id %></h5>
        <small class="text-muted">Ordered on: <%= new Date(order.createdAt).toLocaleDateString() %></small>
      </div>
      <div>
        <span class="badge <%= order.orderStatus === 'Delivered' ? 'bg-success' : order.orderStatus === 'Cancelled' ? 'bg-danger' : 'bg-warning' %>">
          <%= order.orderStatus %>
        </span>
      </div>
    </div>
    <div class="card-body">
      <!-- User Details -->
      <h6>User Information</h6>
      <p>
        <strong>Name: </strong> <%= order.user.firstName %> <%= order.user.lastName %> <br>
        <strong>Email: </strong> <%= order.user.email %> <br>
      </p>
      
      <!-- Shipping Address -->
      <% if (order.address) { %>
        <h6>Shipping Address</h6>
        <p>
          <strong>Name: </strong> <%= address.name %> <br>
          <strong>Address Type: </strong> <%= address.addressType || '' %>  <br
          <strong>City: </strong> <%= address.city %> <br>
          <strong>State: </strong> <%= address.state %> <br>
          <strong>PIN: </strong> <%= address.pincode %> <br>
          <strong>Phone: </strong> <%= address.phone_no %>
          <% if (address.altPhone_no) { %>
            <br><strong>Alternative Phone: </strong> <%= address.altPhone_no %>
          <% } %>
        </p>
      <% } else { %>
        <p>No shipping address available</p>
      <% } %>
      
      <!-- Order Summary -->
      <h6>Summary</h6>
      <p>
        <strong>Total Amount: </strong> ₹<%= order.totalAmount %> <br>
        <% if (order.shippingCost) { %>
          <strong>Shipping Cost: </strong> ₹<%= order.shippingCost %> <br>
        <% } %>
      </p>
      
      <!-- Order Status Update Form -->
      <h6>Update Order Status</h6>
      <form id="updateStatusForm" action="/admin/update-order-status" method="POST" class="form-inline">
        <input type="hidden" name="orderId" value="<%= order._id %>">
        <div class="mb-3">
          <select name="newStatus" class="form-select w-auto d-inline">
            <option value="">Select new status</option>
            <option value="Pending" <%= order.orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
            <option value="Shipped" <%= order.orderStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
            <option value="Out for Delivery" <%= order.orderStatus === 'Out for Delivery' ? 'selected' : '' %>>Out for Delivery</option>
            <option value="Delivered" <%= order.orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
            <option value="Cancelled" <%= order.orderStatus === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
          </select>
          <button type="submit" class="btn btn-primary ms-2">Update</button>
        </div>
      </form>
      
      <!-- Return Request Verification (if applicable) -->
      <% if (order.orderStatus && (order.orderStatus === 'Return Requested' )) { %>
        <div class="mt-4">
          <h6>Return Request</h6>
          <p>
            <strong>Reason:</strong> <%= order.returnRequest.reason %> <br>
            <strong>Status:</strong> <%= order.returnRequest.status %>
          </p>
          <form id="verifyReturnForm" action="/admin/verify-return-request" method="POST">
            <input type="hidden" name="orderId" value="<%= order._id %>">
            <button name="approve" value="true" type="submit" class="btn btn-success">
              Approve Return & Refund
            </button>
            <button name="approve" value="false" type="submit" class="btn btn-danger">
              Decline Return
            </button>
          </form>
        </div>
      <% } %>
      
    </div>
  </div>
  
  <!-- Order Items -->
  <div class="card mb-4">
    <div class="card-header">
      <h5>Items in Order</h5>
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% order.items.forEach(item => { %>
            <tr>
              <td><%= item.productId.productName %></td>
              <td>
                <img src="/uploads/product-images/<%= item.productId.productImage[0] %>"  alt="<%= item.productId.productName %>" style="width:100px; height: 100px; object-fit: cover ; padding-top: 30px;">
              </td>
              <td>₹<%= item.price %></td>
              <td><%= item.quantity %></td>
              <td>₹<%= item.totalPrice %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>

<%- include("../../views/partials/admin/footer") %>

<!-- Add this before the closing body tag -->

<script>

const verifyReturnForm = document.getElementById('verifyReturnForm');
if (verifyReturnForm) {
  verifyReturnForm.addEventListener('submit', async function(e) {
    e.preventDefault();

    // ... rest of your code
    const form = e.target;
    const orderId = form.querySelector('input[name="orderId"]').value;
    const approve = e.submitter.value === 'true';
    
    try {
        const response = await fetch('/admin/verify-return-request', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({
                orderId: orderId,
                approve: approve
            })
        });

        const data = await response.json();
        
        await Swal.fire({
            icon: data.icon || 'error',
            title: data.success ? 'Success' : 'Warning',
            text: data.message,
            confirmButtonText: 'OK'
        });

        if (data.success) {
            window.location.reload();
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong while processing the return request'
        });
    }



  });
}

